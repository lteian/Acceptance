<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_50">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_acceptance_type"
            android:entries="@array/AcceptanceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            >

        </Spinner>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iflytek_listen"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/job_text_input_layout"
                >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="6"
            android:paddingTop="16dp"
            android:id="@+id/hj_description"
            android:hint="请描述活件详情"
            />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:src="@drawable/iflytek_voice"
                android:id="@+id/iflytek_listen"
                android:background="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/job_text_input_layout"
                app:layout_constraintTop_toTopOf="@+id/job_text_input_layout"
                app:layout_constraintBottom_toBottomOf="@+id/job_text_input_layout"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:focusable="false"
                android:scaleType="centerInside"
                android:background="@color/white"
                android:id="@+id/job_image"
                app:layout_constraintTop_toBottomOf="@+id/job_text_input_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/capter_pic_button"
                    app:layout_constraintTop_toTopOf="@+id/add_loco_submit"
                    app:layout_constraintRight_toLeftOf="@id/add_loco_submit"
                    android:paddingLeft="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="16dp"
                    android:text="添加图片"/>
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_loco_submit"
                app:qmui_backgroundColor="@color/colorPrimary"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:layout_margin="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/job_image"
                app:layout_constraintRight_toRightOf="parent"
                />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>